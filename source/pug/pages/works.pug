                            .item__profession — специальность
                .reviews__background
                    img(src="./assets/images/works-reviews.jpg", alt="" class="works-reviews-img")
                    form(action="contact" method="POST" class="feedback-wrapper")
                        .feedback
                            .feedback__title.about__title Связаться со мной
                            .feedback__form
                                .feedback__form__item
                                    label(for="").feedback__form__label.feedback__form__label--top
                                        input(type="text" placeholder="Имя" name="name").feedback__form__input
                                    label(for="").feedback__form__label
                                        input(type="email" placeholder="Email" name="email").feedback__form__input
                                    label(for="").feedback__form__label
                                        textarea(name="text" placeholder="Ваше сообщение" required).feedback__form__textarea
                        .feedback-buttons
                            input(type="submit" value="Отправить").feedback-button.feedback-buttons__submit
                            input(type="reset" value="Очистить").feedback-button.feedback-buttons__reset
        +footer()
    script(src="./assets/js/slider.js")